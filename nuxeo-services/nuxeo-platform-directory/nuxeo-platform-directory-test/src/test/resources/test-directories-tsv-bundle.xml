<?xml version="1.0"?>
<component name="org.nuxeo.ecm.directory.storage.tsv">

  <extension target="org.nuxeo.ecm.directory.GenericDirectory"
    point="directories">

    <directory name="userDirectory" extends="template-user">
      <schema>user</schema>
      <types>
        <type>system</type>
      </types>
      <idField>username</idField>
      <passwordField>password</passwordField>
      <passwordHashAlgorithm>SSHA</passwordHashAlgorithm>
      <substringMatchType>subany</substringMatchType>
      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>test-users-with-tabs.tsv</dataFile>
      <dataFileCharacterSeparator>	</dataFileCharacterSeparator>
      <createTablePolicy>always</createTablePolicy>
    </directory>


    <directory name="groupDirectory" extends="template-group">
      <schema>group</schema>
      <types>
        <type>system</type>
      </types>
      <idField>groupname</idField>
      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>test-groups.csv</dataFile>
      <createTablePolicy>always</createTablePolicy>
    </directory>

  </extension>
</component>
